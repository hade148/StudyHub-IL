# Database Configuration
# ======================

# Local Development Database
# Use this for local PostgreSQL development
DATABASE_URL="postgresql://postgres:your_password_here@localhost:5432/studyhub"

# Azure PostgreSQL Flexible Server Configuration
# ===============================================
# Azure requires SSL/TLS connections (sslmode=require)
# Replace PASSWORD with your actual database password
# Server: studyhub-db.postgres.database.azure.com
# Admin username: dbadmin

# Development Environment (Azure)
# DATABASE_URL="postgresql://dbadmin:PASSWORD@studyhub-db.postgres.database.azure.com:5432/studyhub_dev?sslmode=require"

# Staging Environment (Azure)
# DATABASE_URL_STAGING="postgresql://dbadmin:PASSWORD@studyhub-db.postgres.database.azure.com:5432/studyhub_staging?sslmode=require"

# Production Environment (Azure)
# DATABASE_URL_PRODUCTION="postgresql://dbadmin:PASSWORD@studyhub-db.postgres.database.azure.com:5432/studyhub_prod?sslmode=require"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=4000
NODE_ENV=development

# Client URL (for CORS and email links)
CLIENT_URL="http://localhost:5173"

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=studyhubil;AccountKey=your-key-here;EndpointSuffix=core.windows.net"
AZURE_STORAGE_CONTAINER_NAME="studyhub-files"
